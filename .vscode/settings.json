{
   "files.associations": {
      "*.inc": "cpp"
   },
   "editor.rulers": [
      80,
      100
   ],
   "editor.indentSize": "tabSize",
   "editor.tabSize": 3,
   "editor.detectIndentation": false,
   "git.enableCommitSigning": false,
   "search.quickOpen.includeHistory": false,
   "python.analysis.typeCheckingMode": "standard",
   "[python]": {
      "editor.tabSize": 4,
      "editor.detectIndentation": true,
   },
   "[markdown]": {
      "editor.unicodeHighlight.ambiguousCharacters": false,
      "editor.unicodeHighlight.invisibleCharacters": false,
      "diffEditor.ignoreTrimWhitespace": false,
      "editor.wordWrap": "wordWrapColumn",
      "editor.wordWrapColumn": 80,
      "editor.quickSuggestions": {
         "comments": "off",
         "strings": "off",
         "other": "off"
      }
   },
   // Disable Microsoft C++ extension autocomplete + code analysis
   // We only need it for docs & syntax highlighting. LSP is clangd.
   "C_Cpp.codeAnalysis.runAutomatically": false,
   "C_Cpp.codeAnalysis.clangTidy.enabled": true,
   "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
   "C_Cpp.codeAnalysis.exclude": {
      "**/build/**": true
   },
   "C_Cpp.intelliSenseEngine": "default",
   "C_Cpp.errorSquiggles": "disabled",
   "C_Cpp.autocomplete": "disabled",
   "C_Cpp.autoAddFileAssociations": false,
   // LSP clangd configuration. Disable hover provider as MS C++
   // renders docs much prettier <3
   "clangd.arguments": [
      "--compile-commands-dir=${workspaceFolder}/build",
      "--completion-style=detailed",
      "--background-index"
   ],
   "clangd.detectExtensionConflicts": false,
   "clangd.serverCompletionRanking": true,
   "clangd.enableHover": false,
   "mlir.tablegen_compilation_databases": [
      "${workspaceFolder}/build/tablegen_compile_commands.yml"
   ],
}